<div class="page-header">
  <%= link_to new_video_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Video
  <% end %>
  <h1>Videos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Date</th>
            <th>Level</th>
            <th>Title</th>
            <th>Description</th>
            <th>Wistia ID</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @videos) do |video| %>
            <td><%= video.date %></td>
            <td><%= video.level %></td>
            <td><strong><%= video.title %></strong></td>
            <td><%= video.description %></td>
            <td><%= video.wistia %></td>
            <td>
                <%= link_to video, class: 'btn btn-primary btn-xs' do %>
                  <span class="glyphicon glyphicon-info-sign"></span>
                <% end %>
            </td>
            <td>
                <%= link_to edit_video_path(video), class: 'btn btn-primary btn-xs' do %>
                  <span class="glyphicon glyphicon-edit"></span>
                <% end %>
            </td>
            <td>
                <%= link_to('<i class="glyphicon glyphicon-remove-sign"> </i>'.html_safe, video_path(video), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn-xs') %>
            </td>
      <% end %>
    </tbody>
  </table>
</div>
